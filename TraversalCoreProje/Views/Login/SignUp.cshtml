@model TraversalCoreProje.Models.UserRegisterViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<style>
    .signupbox {
        height: 1200px;
    }

    .deneme {
        margin-top: 10%;
    }
</style>

<body>

    <section class="signupbox">
        <div class="contact-infubd py-5">
            <div class="container py-lg-3">
                <div class="row d-flex justify-content-center  deneme">

                    <div class="col-lg-6 mt-lg-0 mt-5 ">
                        <div>
                            <h4 class="text-center mb-3">Yeni Hesap Oluştur !</h4>
                        </div>
                        <form method="post">
                            <div class="input-grids">
                                <div class="form-group">
                                    <input type="text" asp-for="Name"  placeholder="Adınız*" class="form-control" />
                                    <span class="text text-danger" asp-validation-for="Name"></span>
                                </div>
                                <div class="form-group">
                                    <input type="text" asp-for="Surname" placeholder="Soyadınız*" class="form-control" />
                                    <span class="text text-danger" asp-validation-for="Surname"></span>
                                </div>
                                <div class="form-group">
                                    <input type="email" asp-for="Mail" placeholder="Email*" class="form-control" />
                                    <span class="text text-danger" asp-validation-for="Mail"></span>
                                </div>
                                <div class="form-group">
                                    <input type="text" asp-for="Username" placeholder="Kullanıcı adı*" class="form-control" />
                                    <span class="text text-danger" asp-validation-for="Username"></span>
                                </div>
                                <div class="form-group">
                                    <input type="password" asp-for="Password" placeholder="Şifreniz*" class="form-control" />
                                    <span class="text text-danger" asp-validation-for="Password"></span>
                                </div>
                                <div class="form-group">
                                    <input type="password" asp-for="ConfrimPassword" placeholder="Şifre Tekrar*" class="form-control" />
                                    <span class="text text-danger" asp-validation-for="ConfrimPassword"></span>
                                    <div class="text text-danger" asp-validation-summary="ModelOnly"></div>
                                </div>
                            </div>

                            <div class="text-right">
                                <button class="btn btn-style btn-success">Kayıt Ol</button>
                            </div>
                        </form>
                        <span><a href="/Login/SignIn/"> Bunun Yerine Oturum Aç</a></span>
                    </div>

                </div>
                </div>

            </div>
    </section>


</body>