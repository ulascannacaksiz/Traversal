@model List<Destination>
@{
    ViewData["Title"] = "Services";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}


<body>

    <section class="w3l-about-breadcrumb text-left">
        <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
            <div class="container">
                <h2 class="title">Tur Rotalarımız </h2>
                <ul class="breadcrumbs-custom-path mt-2">
                    <li><a href="/Default/Index/">Anasayfa</a></li>
                    <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Rotalar </li>
                </ul>
            </div>
        </div>
    </section>
    <!-- //about breadcrumb -->
    <!--  Work gallery section -->
    <section class="grids-1 py-5">
        <div class="grids py-lg-5 py-md-4">
            <div class="container">
                <h3 class="hny-title mb-5">Rotalar</h3>
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-md-4 col-6">
                            <div class="column">
                                <a href="/Destination/DestinationDetails/@item.DestinationId/"><img src="@item.Image" style="width:370px; height:270px;" alt="" class="img-fluid"></a>
                                <div class="info">
                                    <h4><a href="/Destination/DestinationDetails/@item.DestinationId/">@item.City</a></h4>
                                    <p>@item.DayNight </p>
                                    <div class="dst-btm">
                                        <h6 class="">Başlayan fiyatlarla </h6>
                                        <span>@item.Price $</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</body>