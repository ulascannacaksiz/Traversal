<div class="leave-comment-form mt-5" id="reply">
    <h4 class="side-title mb-2">Bir yorum bırakın</h4>
    <p class="mb-4">
        Mail adresiniz yayınlanmayacaktır. * Alanlar zorunludur
    </p>
    <form method="post" id="addcommentform">

        <div class="form-group">
            <textarea name="CommentContent" class="form-control" placeholder="Yorumunuz*" required=""
                      spellcheck="false"></textarea>
        </div>
        <div class="input-grids row">

            <div class="form-group col-lg-12">
                <input type="text" name="CommentUser" class="form-control" placeholder="İsminiz*"
                       required="">
            </div>
           

        </div>
        <input type="hidden" name="DestinationId" id="DestinationId" />
        <div class="submit text-right">
            <button class="btn btn-style btn-primary" id="btnsubmit">Yorumu Gönder </button>
        </div>
    </form>
</div>

<script>
    $(document).ready(function () {
        let id = $("#did").val();
        $("#DestinationId").val(id);
    });

    $("#btnsubmit").click((e)=>{
        e.preventDefault();
       $.ajax({
        url:"/Comment/AddComment/",
        type:"Post",
        data: $("#addcommentform").serialize(),
        done: ((e)=>{
            console.log(e);
        })
    })
    return false;
    })

</script>