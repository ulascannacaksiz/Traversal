@model CreateDestinationCommand
@{
    ViewData["Title"] = "AddDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Tur Rotası Ekle CQRS</h1>

<form method="post">
    <label>Şehir</label>
    @Html.TextBoxFor(x=>x.City,"",new{@class="form-control"})
    <label>Gün-Gece</label>
    @Html.TextBoxFor(x=>x.DayNight,"",new{@class="form-control"})
    <label>Fiyat</label>
    @Html.TextBoxFor(x=>x.Price,"",new{@class="form-control"})
    <label>Kapasiye</label>
    @Html.TextBoxFor(x=>x.Capacity,"",new{@class="form-control"})
    <br />
    <br />
    <button type="submit" class="btn btn-success">Güncelle</button>
</form>
