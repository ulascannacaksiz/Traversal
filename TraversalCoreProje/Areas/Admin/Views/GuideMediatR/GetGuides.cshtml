@using TraversalCoreProje.CQRS.Results.GuideResults;
@model GetGuideByIdQueryResult
@{
    ViewData["Title"] = "GetGuides";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rehber Düzenleme Sayfası</h1>

<form method="post">
    <input type="hidden" asp-for="GuideId" />
    <label>Rehber Adı</label>
    <input type="text" class="form-control" asp-for="Name" />
    <br />
    <label>Rehber Açıklaması</label>
    <input type="text" class="form-control" asp-for="Description" />
   <br />
    <button class="btn btn-info">Kaydet</button>
</form>

