@model List<ContactUs>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Index</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Gönderen</th>
        <th>Konu</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Mesajı Aç</th>
        <th>Durum</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Name</td>
            <td>@item.Subject</td>
            <td>@item.MessageDate.ToString("dd-MMM-yyyy")</td>
            <td><a href="/Admin/ContactUs/ChangeToStatus/@item.ContactUsId" class="btn btn-danger">Sil</a></td>
            <td><a href="" class="btn btn-primary">Aç</a></td>
            <td>@item.Status</td>

       </tr>
   }
</table>