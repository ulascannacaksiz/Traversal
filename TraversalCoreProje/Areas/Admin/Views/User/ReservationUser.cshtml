@model List<Reservation>
@{
    ViewData["Title"] = "ReservationUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Kullanıcının geçmiş rezervasyonları</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Misafir Ad soyad</th>
        <th>Rota</th>
        <th>Kişi Sayısı</th>
        <th>Tarih</th>
        <th>Durum</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            @{count++;}
           <td>@count</td>
           @*<td>@item.AppUser.Name @item.AppUser.Surname</td>*@
           <td>#####</td>
           <td>@item.Destination.City</td>
           <td>@item.PersonCount</td>

            <td>
                @item.ReservationDate.ToString("dd-MMM-yyyy")

            </td>
           <td>@item.Status</td>
           <td><a href="" class="btn btn-info">Detay gör</a></td>
       </tr>
   }
</table>