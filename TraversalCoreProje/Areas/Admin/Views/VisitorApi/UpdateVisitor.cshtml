@using TraversalCoreProje.Areas.Admin.Models
@model VisitorViewModel
@{
    ViewData["Title"] = "UpdateVisitor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Api ile ziyaretçi güncelleme</h1>

<form method="post">
    <input type="hidden" asp-for="VisitorId" />
    <label>Ziyaretçi Adı</label>
    <input type="text" class="form-control" asp-for="Name" />

    <label>Ziyaretçi Soyad</label>
    <input type="text" class="form-control" asp-for="Surname" />

    <label>Ziyaretçi Mail</label>
    <input type="text" class="form-control" asp-for="Mail" />

    <label>Ziyaretçi Şehir</label>
    <input type="text" class="form-control" asp-for="City" />

    <label>Ziyaretçi Ülke</label>
    <input type="text" class="form-control" asp-for="Country" />

    <button class="btn btn-primary">Güncelle</button>
</form>